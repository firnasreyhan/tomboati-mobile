<LinearLayout android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_green"
    tools:context=".view.activity.ArahKiblatActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/dark_green"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_13sdp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dial"
                android:layout_width="@dimen/_158sdp"
                android:layout_height="@dimen/_158sdp"
                android:layout_gravity="center"
                android:src="@drawable/dial" />

            <ImageView
                android:id="@+id/qibla_indicator"
                android:layout_width="@dimen/_246sdp"
                android:layout_height="@dimen/_246sdp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/qibla" />

        </FrameLayout>

        <TextView
            android:id="@+id/angle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/footer_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_139sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:scaleType="fitXY"
            android:src="@drawable/footer" />

        <TextView
            android:id="@+id/your_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>