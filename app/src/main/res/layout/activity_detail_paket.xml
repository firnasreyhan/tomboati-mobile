<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_background_beranda"
    tools:context=".view.activity.DetailPaketActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/dark_green"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_7sdp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/dark_green">

        <TextView
            android:id="@+id/textViewNamaPaket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/catamaran_bold"
            android:textSize="@dimen/_13sdp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Nama Paket"/>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_9sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_13sdp"
                app:cardCornerRadius="@dimen/_9sdp"
                app:cardBackgroundColor="#F0F0F0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewPaket"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@color/dark_green" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_13sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/catamaran_bold"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="@color/dark_green"
                            android:textStyle="bold"
                            android:text="PILIH PAKET"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardViewQuad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                app:cardCornerRadius="@dimen/_5sdp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/dark_green">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_4sdp"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/textViewQuad"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/catamaran_bold"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/_9sdp"
                                        android:text="Rp. 20.000.000,-"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/catamaran_regular"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/_9sdp"
                                        android:textStyle="italic"
                                        android:text="(Quad)"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardViewTriple"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                app:cardCornerRadius="@dimen/_5sdp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/dark_green">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_4sdp"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/textViewTriple"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/catamaran_bold"
                                        android:text="Rp. 20.500.000,-"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/_9sdp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/catamaran_regular"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/_9sdp"
                                        android:textStyle="italic"
                                        android:text="(Triple)"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardViewDouble"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                app:cardCornerRadius="@dimen/_5sdp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/dark_green">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_4sdp"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/textViewDouble"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/catamaran_bold"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/_9sdp"
                                        android:text="Rp. 21.000.000,-"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/catamaran_regular"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/_9sdp"
                                        android:textStyle="italic"
                                        android:text="(Double)"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_9sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageViewMaskapai"
                                    android:layout_width="@dimen/_57sdp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_lion_air" />

                                <TextView
                                    android:id="@+id/textViewPenerbangan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/catamaran_bold"
                                    android:text="SUB - JED"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_9sdp" />

                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@android:color/black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textViewTempatHotelA"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/catamaran_bold"
                                    android:text="MADINAH"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_9sdp" />

                                <TextView
                                    android:id="@+id/textViewNamaHotelA"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/catamaran_regular"
                                    android:text="Concorde / setaraf"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_9sdp" />

                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@android:color/black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textViewTempatHotelB"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/catamaran_bold"
                                    android:text="MEKKAH"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_9sdp" />

                                <TextView
                                    android:id="@+id/textViewNamaHotelB"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/catamaran_regular"
                                    android:text="Deafah / setaraf"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_9sdp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_11sdp"
                                android:fontFamily="@font/catamaran_bold"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@android:color/black"
                                android:text="ITTENERARY"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@android:color/black"/>

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewIttenerary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/catamaran_bold"
                            android:textSize="@dimen/_9sdp"
                            android:textColor="#6F0101"
                            android:text="*) Tanpa mengurangi nilai Ibadah para Jamaah Tombo Ati, Ittinerary ini dapat berubah sewaktu â€“ waktu bila terjadi perubahan dari maskapai penerbangan dan kondisi di Arab Saudi."/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_11sdp"
                                android:fontFamily="@font/catamaran_bold"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/dark_green"
                                android:text="BIAYA SUDAH TERMASUK"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/dark_green"/>

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewBiayaSudahTermasuk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_11sdp"
                                android:fontFamily="@font/catamaran_bold"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/dark_green"
                                android:text="BIAYA BELUM TERMASUK"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/dark_green"/>

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewBiayaBelumTermasuk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_7sdp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="1"
                android:fontFamily="@font/catamaran_bold"
                android:text="Simpan"
                android:textAllCaps="false"
                app:strokeColor="@color/dark_green"
                android:textColor="@color/dark_green"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:fontFamily="@font/catamaran_bold"
                android:text="Pesan"
                android:textAllCaps="false"
                app:backgroundTint="@color/dark_green"
                android:textColor="@color/white"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>