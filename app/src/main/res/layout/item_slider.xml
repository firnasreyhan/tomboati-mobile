<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_165sdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewSlider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_slider_utama"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_gravity="left|top"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewDateHijriah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/catamaran_bold"
            android:text="12 Rabiul Awal 1442"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/textViewDateMasehi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/catamaran_bold"
            android:text="8 November 2020"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/_27sdp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewWaktuSholat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cinzel_bold"
            android:text="DHUHUR"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/textViewJamSholat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cinzel_bold"
            android:text="14.20"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_9sdp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewWaktuSholatNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:fontFamily="@font/catamaran_bold"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_8sdp"
        android:text="Ashar : 14.30.21"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:src="@drawable/ic_location" />

        <TextView
            android:id="@+id/textViewKota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cinzel_bold"
            android:text="JAKARTA"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>

</FrameLayout>