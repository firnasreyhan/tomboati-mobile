<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.AkunFragment">
    
    <LinearLayout
        android:id="@+id/linearLayoutAkun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="-90dp"
            app:cardBackgroundColor="@color/dark_green"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="26dp"
                android:paddingLeft="38dp"
                android:paddingRight="38dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/shapeableImageViewFoto"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_logo"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:background="@android:color/white"
                        app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewNamaLengkap"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/catamaran_bold"
                            android:text="Name"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textViewNomorHP"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/catamaran_medium"
                            android:text="No. Handphone"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_coin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/catamaran_bold"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_13sdp" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButtonProfileEdit"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:fontFamily="@font/catamaran_bold"
            android:gravity="left|center"
            android:paddingLeft="38dp"
            android:paddingTop="20dp"
            android:paddingRight="38dp"
            android:paddingBottom="20dp"
            android:text="Ubah Profil"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:backgroundTint="@color/background"
            app:elevation="0dp"
            app:icon="@drawable/ic_edit"
            app:iconGravity="start"
            app:iconPadding="17dp"
            app:iconTint="@color/dark_green"
            app:strokeColor="@color/background"
            app:strokeWidth="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButtonPasswordEdit"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/catamaran_bold"
            android:gravity="left|center"
            android:paddingLeft="38dp"
            android:paddingTop="20dp"
            android:paddingRight="38dp"
            android:paddingBottom="20dp"
            android:text="Ubah Password"
            android:textAllCaps="false"
            android:textColor="#333333"
            android:textSize="12sp"
            app:backgroundTint="@color/background"
            app:elevation="0dp"
            app:icon="@drawable/ic_password"
            app:iconGravity="start"
            app:iconPadding="17dp"
            app:iconTint="@color/dark_green"
            app:strokeColor="@color/background"
            app:strokeWidth="0dp" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/catamaran_bold"
            android:gravity="left|center"
            android:paddingLeft="38dp"
            android:paddingTop="20dp"
            android:paddingRight="38dp"
            android:paddingBottom="20dp"
            android:text="Kode Referal"
            android:textAllCaps="false"
            android:textColor="#333333"
            android:textSize="12sp"
            app:backgroundTint="@color/background"
            app:elevation="0dp"
            app:icon="@drawable/ic_voucher"
            app:iconGravity="start"
            app:iconPadding="17dp"
            app:iconTint="@color/dark_green"
            app:strokeColor="@color/background"
            app:strokeWidth="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButtonPrivacyPolicy"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/catamaran_bold"
            android:gravity="left|center"
            android:paddingLeft="38dp"
            android:paddingTop="20dp"
            android:paddingRight="38dp"
            android:paddingBottom="20dp"
            android:text="Kebijakan Privasi"
            android:textAllCaps="false"
            android:textColor="#333333"
            android:textSize="12sp"
            app:backgroundTint="@color/background"
            app:elevation="0dp"
            app:icon="@drawable/ic_privacy_policy"
            app:iconGravity="start"
            app:iconPadding="17dp"
            app:iconTint="@color/dark_green"
            app:strokeColor="@color/background"
            app:strokeWidth="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButtonSignOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/background"
            app:strokeWidth="1dp"
            app:strokeColor="#DADADA"
            app:elevation="0dp"
            app:icon="@drawable/ic_sign_out"
            app:iconTint="@color/dark_green"
            app:iconGravity="start"
            app:iconPadding="17dp"
            android:gravity="left|center"
            android:fontFamily="@font/catamaran_bold"
            android:textColor="@color/dark_green"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:paddingLeft="38dp"
            android:paddingRight="38dp"
            android:text="Keluar"
            android:textAllCaps="false"
            android:textSize="12sp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/constraintLayoutSignIn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/ic_background_beranda">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="43dp"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="43dp"
                android:layout_marginRight="43dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/catamaran_bold"
                    android:text="Selamat Datang"
                    android:textColor="@color/dark_green"
                    android:textSize="@dimen/_19sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/catamaran_medium"
                    android:text="Masuk untuk mengakses akun"
                    android:textColor="#333333"
                    android:textSize="@dimen/_9sdp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:fontFamily="@font/catamaran_regular"
                        android:inputType="textEmailAddress"
                        android:textColor="#333333" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:hintEnabled="false"
                    app:endIconMode="password_toggle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:fontFamily="@font/catamaran_regular"
                        android:inputType="textPassword"
                        android:textColor="#333333" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/materialButtonSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:backgroundTint="@color/dark_green"
                    android:fontFamily="@font/catamaran_bold"
                    android:padding="12dp"
                    android:text="MASUK"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_11sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/catamaran_bold"
                        android:text="Tidak punya akun? "
                        android:textColor="#333333"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/textViewSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/catamaran_bold"
                        android:text="Daftar"
                        android:textColor="@color/dark_green"
                        android:textSize="@dimen/_9sdp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>