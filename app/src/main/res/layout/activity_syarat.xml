<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_beranda"
    android:orientation="vertical"
    tools:context="tour.view.activity.pendaftaran.SyaratActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone" />

    <com.codesgood.views.JustifiedTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/cinzel_medium"
        android:gravity="center"
        android:text="Syarat Pendaftaran &amp; Ketentuan"
        android:textColor="@color/dark_green"
        android:textSize="@dimen/_13sdp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_9sdp"
                android:background="@color/white"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_13sdp">

                    <com.codesgood.views.JustifiedTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/catamaran_bold"
                        android:text="syarat pendaftaran"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="top|left"
                        android:orientation="horizontal">

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="1. "
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="Mengisi Form Pendaftaran."
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="top|left"
                        android:orientation="horizontal">

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="2. "
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="Upload foto/scan KTP dan Kartu Keluarga."
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="top|left"
                        android:orientation="horizontal">

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="3. "
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="Upload foto/scan Buku Nikah (suami + istri) &amp; Akte Lahir (tidak memiliki buku nikah)."
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="top|left"
                        android:orientation="horizontal">

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="4. "
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="Pendaftaran paling lambat 1 bulan sebelum keberangkatan yang telah ditentukan."
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/catamaran_bold"
                        android:text="ketentuan"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="top|left"
                        android:orientation="horizontal">

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="1. "
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="Rooming list bersifat kondisional, apabila tidak mendapat kamar yang diinginkan maka bersedia upgrade dengan harga yang berlaku."
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="top|left"
                        android:orientation="horizontal">

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="2. "
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="Apabila terjadi delay dalam penerbangan maka sepenuhnya adalah tanggung jawab Airlines yang bersangkutan karena sudah diluar kendali travel."
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="top|left"
                        android:orientation="horizontal">

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="3. "
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="Apabila ada peserta tour yang sakit dan memerlukan perawatan medis , maka pihak travel akan membantu pelaksanaannya akan tetapi untuk biaya merupakan tanggung jawab peserta yang bersangkutan."
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="top|left"
                        android:orientation="horizontal">

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="4. "
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="Apabila ada peserta yang meninggal dunia dalam perjalanan maka jenazah akan dimakamkan ditempat yang ditunjuk oleh yang berwenang kecuali ada permintaan dari keluarga dan biaya ditanggung sendiri."
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="top|left"
                        android:orientation="horizontal">

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="5. "
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="Apabila ada peserta yang mengalami kehilangan barang bawaan atau bagasi bukan tanggung jawab travel."
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="top|left"
                        android:orientation="horizontal">

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="6. "
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="Apabila selama perjalanan Tour terjadi hal diluar dugaan maka pihak Travel berhak mengambil keputusan sebagai solusi terbaik yang harus dilakukan."
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="top|left"
                        android:orientation="horizontal">

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="7. "
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                        <com.codesgood.views.JustifiedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/catamaran_regular"
                            android:text="Segala hal yang belum tertuang dalam persyaratan Umroah ini akan dibicarakan dan diselesaikan sebelum keberangkatan."
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_7sdp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButtonSetujuDanLanjutkan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:backgroundTint="@color/dark_green"
                android:fontFamily="@font/catamaran_bold"
                android:padding="12dp"
                android:text="Setuju dan Lanjutkan"
                android:textAllCaps="false"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>