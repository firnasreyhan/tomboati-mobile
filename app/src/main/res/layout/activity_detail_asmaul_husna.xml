<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="asma"
            type="com.tomboati.tour.model.AsmaulHusnaModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/dark_green"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_langit"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <TextView
                android:id="@+id/tv_ayat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/cinzel_bold"
                android:gravity="center"
                android:text="@{asma.arab}"
                tools:text="Asmaul Husna"
                android:textColor="#ffffff"
                android:textSize="@dimen/_38sdp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/login_title"
            android:elevation="4sp"
            android:orientation="vertical"
            android:padding="20sp">


            <TextView
                android:id="@+id/tv_arti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:fontFamily="@font/cinzel_bold"
                android:text="@{asma.terjemahan}"
                tools:text="Arti"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:fontFamily="@font/catamaran_bold"
                android:text="Keterangan"
                android:textColor="#000000"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/cardview_dark_background" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/catamaran_regular"
                android:text="@{asma.keterangan}"
                tools:text="keterangan"
                android:textColor="#000000"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:fontFamily="@font/catamaran_bold"
                android:text="Meneladani"
                android:textColor="#000000"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/cardview_dark_background" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/meneladani"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/catamaran_regular"
                android:text="@{asma.meneladani}"
                tools:text="meneladani"
                android:textColor="#000000"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>

    </LinearLayout>

</layout>


