<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_29sdp"
                android:layout_height="@dimen/_29sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_logo"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                app:hintEnabled="false"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_search"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusBottomStart="@dimen/_30sdp"
                app:boxCornerRadiusTopEnd="@dimen/_30sdp"
                app:boxCornerRadiusTopStart="@dimen/_30sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_30sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextSearch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_26sdp"
                    android:fontFamily="@font/catamaran_regular"
                    android:hint="Cari..."
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_12sdp"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:inputType="text"
                    android:textColor="#333333"
                    android:imeOptions="actionSearch"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageViewAvatar"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/ic_no_profile"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_12sdp"
            android:fontFamily="@font/catamaran_regular"
            android:textSize="@dimen/_16sdp"
            android:textColor="@android:color/black"
            android:text="Mr. Fakhri Fahreza"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:fontFamily="@font/catamaran_regular"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/dark_grey"
            android:text="Free User"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayoutFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_bottom_navigation"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        android:background="@color/dark_green"/>

</LinearLayout>